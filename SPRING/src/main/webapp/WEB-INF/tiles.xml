<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
    <definition name="basicTemplate" template="/WEB-INF/views/layouts/tilesTemplate.jsp">
        <put-attribute name="header" value="/WEB-INF/views/layouts/tilesHeader.jsp" />
    </definition>
<!--controller에서 return되는 STRING 값이 name이다 거기서 1차 주소값 2차 주소값 그러는 것이다 -->
    <definition name="*/*" extends="basicTemplate"> <!-- */* 주소값 체계, 1차 주소값 / 2차 주소값 -->
        <put-attribute name="content" value="/WEB-INF/views/{1}/{2}.jsp" />
        <put-attribute name="res" value="{1}/{2}" />
    </definition>

</tiles-definitions>


