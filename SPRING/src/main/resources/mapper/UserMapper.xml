<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.koreait.first.user.UserMapper">
    <insert id="insUser">
        INSERT INTO t_user
        (uid, upw, unm, gender)
        VALUES
        (#{uid}, #{upw}, #{unm}, #{gender})
    </insert>

    <!--parameter type은 생략 가능, resultType은 필수, 이것은 select만 해당-->
    <select id="selUser" resultType="com.koreait.first.user.UserEntity">
        SELECT * FROM t_user
        WHERE uid = #{uid}
    </select>


</mapper>
